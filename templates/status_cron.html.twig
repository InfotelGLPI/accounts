{% import 'components/form/basic_inputs_macros.html.twig' as inputs %}
{% import 'components/form/fields_macros.html.twig' as fields %}

{% set rand = random() %}
{% set field_options = {
    'field_class': 'col-4',
} %}
{% if can_edit %}
    <form method="post" action='{{ action }}' data-submit-once>
        <div class="card">
            <div class="card-header">

                <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">
                <input type="hidden" name="id" value="{{ id }}">

                <h3 class="card-title">
                    {{ __('Add a unused status for expiration mailing', 'accounts') }}
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    {{ inputs.hidden('_glpi_csrf_token', csrf_token()) }}
                    {{ fields.dropdownField(
                        'GlpiPlugin\\Accounts\\AccountState',
                        'plugin_accounts_accountstates_id',
                        config['plugin_accounts_accountstates_id'],
                        'GlpiPlugin\\Accounts\\AccountState'|itemtype_name(1), {
                            'used': used
                        }|merge(field_options)) }}
                </div>

                <div class="hr mt-3 mb-3"></div>
                <div class="hstack gap-1">
                    <div class="pe-5 ms-auto">
                        {{ inputs.submit('add', _x('button', 'Add'), 1, {class: 'btn btn-primary ms-1', icon: 'ti ti-plus'}) }}
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endif %}

 {{ include('components/datatable.html.twig', datatable_params, with_context = false) }}
